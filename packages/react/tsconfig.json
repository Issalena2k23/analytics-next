{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "importHelpers": true,
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es2020", "DOM"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
